# Firebase Configuration
# Get these from Firebase Console: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Stripe Configuration
# Get these from Stripe Dashboard: https://dashboard.stripe.com/
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key

# Google Cloud Platform (for Research Corpus)
# Get these from GCP Console: https://console.cloud.google.com/
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=akshon-research-corpus
GCP_SERVICE_ACCOUNT_KEY=your_service_account_json_base64_encoded

# Application Configuration
NEXT_PUBLIC_BASE_URL=https://akshon.org

# Blockchain Verification (for crypto payments)
# Get these from respective blockchain explorers
# Etherscan API for Ethereum verification: https://etherscan.io/myapikey
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key
# BaseScan API for Base network: https://basescan.org/myapikey
NEXT_PUBLIC_BASESCAN_API_KEY=your_basescan_api_key
# ArbScan API for Arbitrum: https://arbiscan.io/myapikey
NEXT_PUBLIC_ARBISCAN_API_KEY=your_arbiscan_api_key
# PolygonScan API for Polygon: https://polygonscan.com/myapikey
NEXT_PUBLIC_POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Admin Configuration
ADMIN_EMAIL=your-admin-email@example.com

